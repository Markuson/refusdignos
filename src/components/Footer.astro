---
// Component: Footer.astro
// Description: Site footer with legal links, social media, and contact info

import InstagramIcon from '../assets/icons/Instagram.svg';
import FacebookIcon from '../assets/icons/Facebook.svg';
import TikTokIcon from '../assets/icons/TikTok.svg';

const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    platform: 'Instagram',
    url: 'https://www.instagram.com/refugioslibresdignos',
    Icon: InstagramIcon,
  },
  {
    platform: 'Facebook',
    url: 'https://www.facebook.com/people/Refugios-Libres-Dignos/100087582142068/',
    Icon: FacebookIcon,
  },
  {
    platform: 'TikTok',
    url: 'https://www.tiktok.com/@refugioslibresdignos',
    Icon: TikTokIcon,
  },
];

const legalLinks = [
  { label: 'Privacidad', href: '/legal/privacidad' },
  { label: 'Términos', href: '/legal/terminos' },
  { label: 'Cookies', href: '/legal/cookies' },
];
---

<footer class="bg-[#D8C28E] text-forest-green">
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- About Section -->
      <div>
        <h3 class="text-lg font-semibold mb-4">RefugiosLibresDignos</h3>
        <p class="text-sm">
          Rehabilitando refugios de montaña en los Pirineos para ofrecer espacios seguros, libres y dignos.
        </p>
      </div>

      <!-- Legal Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Legal</h3>
        <ul class="space-y-2 text-sm">
          {
            legalLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="hover:text-sunrise-orange transition-colors focus:outline-none focus:ring-2 focus:ring-sunrise-orange rounded"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Social Media & Contact -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Conéctate</h3>
        <div class="flex space-x-4 mb-4">
          {
            socialLinks.map((social) => (
              <a
                href={social.url}
                aria-label={social.platform}
                class="w-10 h-10 flex items-center justify-center bg-forest-green text-white rounded-full hover:bg-lime-green transition-colors focus:outline-none focus:ring-2 focus:ring-sunrise-orange"
                target="_blank"
                rel="noopener noreferrer"
              >
                <social.Icon class="w-5 h-5 fill-current" />
              </a>
            ))
          }
        </div>
        <p class="text-sm">
          Email: <a
            href="mailto:info@refusdignos.org"
            class="hover:text-sunrise-orange transition-colors focus:outline-none focus:ring-2 focus:ring-sunrise-orange rounded"
          >
            info@refusdignos.org
          </a>
        </p>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-forest-green/20 mt-8 pt-6 text-center text-sm">
      <p>&copy; {currentYear} RefugiosLibresDignos. Todos los derechos reservados.</p>
    </div>
  </div>
</footer>
