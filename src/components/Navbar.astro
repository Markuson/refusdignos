---
// Component: Navbar.astro
// Description: Responsive navigation bar with glass effect and hide-on-scroll animation

const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Inicio' },
  { href: '/proyecto', label: 'Proyecto' },
  { href: '/refugios', label: 'Refugios' },
  { href: '/patrocinadores', label: 'Patrocinadores' },
  { href: '/contacto', label: 'Contacto' },
];

function isActive(href: string) {
  if (href === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(href);
}
---

<nav
  id="main-navbar"
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 ease-in-out navbar-solid"
  aria-label="Main navigation"
>
  <div class="container mx-auto flex items-center justify-between py-3 pl-4 pr-2">
    <!-- Logo -->
    <a
      href="/"
      class="flex items-center space-x-2 text-lg font-bold transition-colors"
      style="color: #284c3e;"
    >
      <!-- TODO: Replace with actual logo -->
      <span>RefugiosLibresDignos</span>
    </a>

    <!-- Desktop Navigation -->
    <ul class="hidden md:flex space-x-2 ml-auto mr-0">
      {
        navLinks.map(({ href, label }) => (
          <li>
            <a
              href={href}
              class:list={[
                'transition-colors focus:outline-none focus:ring-2 rounded px-3 py-1.5 text-sm',
                isActive(href)
                  ? 'font-semibold'
                  : '',
              ]}
              style={
                isActive(href)
                  ? 'color: #E78A33; background-color: rgba(231, 138, 51, 0.1);'
                  : 'color: #284c3e;'
              }
              onmouseover={!isActive(href) ? "this.style.color='#648D21'" : ''}
              onmouseout={!isActive(href) ? "this.style.color='#284c3e'" : ''}
              onfocus="this.style.outlineColor='#E78A33'"
              aria-current={isActive(href) ? 'page' : undefined}
            >
              {label}
            </a>
          </li>
        ))
      }
    </ul>

    <!-- Mobile Menu Button -->
    <button
      id="mobile-menu-button"
      class="md:hidden p-2 rounded focus:outline-none focus:ring-2"
      style="color: #284c3e;"
      onfocus="this.style.outlineColor='#E78A33'"
      aria-label="Toggle mobile menu"
      aria-expanded="false"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu (Hidden by default) -->
  <div
    id="mobile-menu"
    class="hidden md:hidden border-t"
    style="border-color: rgba(40, 76, 62, 0.2);"
  >
    <ul class="flex flex-col space-y-2 p-4">
      {
        navLinks.map(({ href, label }) => (
          <li>
            <a
              href={href}
              class:list={[
                'block px-4 py-2 rounded transition-colors focus:outline-none focus:ring-2',
                isActive(href) ? 'font-bold' : '',
              ]}
              style={
                isActive(href)
                  ? 'color: white; background-color: #E78A33;'
                  : 'color: #284c3e;'
              }
              onmouseover={!isActive(href) ? "this.style.backgroundColor='rgba(100, 141, 33, 0.1)'" : ''}
              onmouseout={!isActive(href) ? "this.style.backgroundColor='transparent'" : ''}
              onfocus="this.style.outlineColor='#E78A33'"
              aria-current={isActive(href) ? 'page' : undefined}
            >
              {label}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</nav>

<style>
  #main-navbar {
    transform-style: preserve-3d;
    perspective: 1000px;
  }

  .navbar-solid {
    background: white;
    box-shadow: none;
    transform: translateZ(0);
  }

  .navbar-glass {
    background: rgba(255, 255, 255, 0.4);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    transform: translateZ(8px);
  }
</style>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
      mobileMenuButton.setAttribute('aria-expanded', (!isExpanded).toString());
      mobileMenu.classList.toggle('hidden');
    });
  }

  // Toggle glass effect on scroll
  let ticking = false;
  const navbar = document.getElementById('main-navbar');
  const scrollThreshold = 10; // Changed from 50 to 10 for earlier animation

  function updateNavbar() {
    const currentScrollY = window.scrollY;

    if (currentScrollY > scrollThreshold) {
      // Scrolled down - apply glass effect
      navbar?.classList.remove('navbar-solid');
      navbar?.classList.add('navbar-glass');
    } else {
      // At top - solid white background
      navbar?.classList.remove('navbar-glass');
      navbar?.classList.add('navbar-solid');
    }

    ticking = false;
  }

  // Initial check on page load
  updateNavbar();

  window.addEventListener('scroll', () => {
    if (!ticking) {
      window.requestAnimationFrame(updateNavbar);
      ticking = true;
    }
  });
</script>
