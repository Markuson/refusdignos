        <li><span class="text-forest-green/40">/</span></li>
        <li><a href="/refugios" class="hover:text-sunrise-orange transition-colors">Refugios</a></li>
        <li><span class="text-forest-green/40">/</span></li>
        <li class="text-forest-green font-semibold">{title}</li>
      </ol>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="bg-background-dark py-12">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold text-forest-green mb-6" transition:name={`refugio-title-${refugio.slug}`}>{title}</h1>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-forest-green/80">
          <div class="flex items-center gap-2">
            <span class="text-2xl">üìç</span>
            <div>
              <div class="text-xs text-forest-green/60 uppercase tracking-wide">Ubicaci√≥n</div>
              <div class="font-semibold">{ubicacion}</div>
            </div>
          </div>
          {altitud && altitud !== 'COMPLETAR' && (
            <div class="flex items-center gap-2">
              <span class="text-2xl">‚õ∞Ô∏è</span>
              <div>
                <div class="text-xs text-forest-green/60 uppercase tracking-wide">Altitud</div>
                <div class="font-semibold">{altitud}</div>
              </div>
            </div>
          )}
          {capacidad && capacidad !== 'COMPLETAR' && (
            <div class="flex items-center gap-2">
              <span class="text-2xl">üë•</span>
              <div>
                <div class="text-xs text-forest-green/60 uppercase tracking-wide">Capacidad</div>
                <div class="font-semibold">{capacidad}</div>
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Image Gallery Section -->
  <section class="py-12 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {imagenes.map((imagen, index) => (
            <button
              type="button"
              class="relative bg-tan/30 rounded-lg overflow-hidden aspect-video cursor-pointer hover:opacity-90 transition-opacity"
              data-lightbox-index={index}
              aria-label={`Ver imagen ${index + 1} en pantalla completa`}
            >
              <Image
                src={imagen.src}
                alt={imagen.alt}
                class="w-full h-full object-cover"
                widths={[600, 800]}
                sizes="(max-width: 768px) 100vw, 50vw"
                loading={index === 0 ? 'eager' : 'lazy'}
                transition:name={index === 0 ? `refugio-image-${refugio.slug}` : undefined}
              />
            </button>
          ))}
        </div>

        {imagenes.length === 0 && (
          <div class="bg-tan/30 rounded-lg p-16 text-center">
            <p class="text-forest-green/70">Galer√≠a de im√°genes pr√≥ximamente</p>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Lightbox Modal -->
  <div id="lightbox" class="fixed inset-0 bg-black/95 z-50 hidden items-center justify-center" role="dialog" aria-modal="true" aria-label="Galer√≠a de im√°genes">
    <button
      id="lightbox-close"
      class="absolute top-4 right-4 text-white hover:text-sunrise-orange transition-colors p-2 z-10"
      aria-label="Cerrar galer√≠a"
    >
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <button
      id="lightbox-prev"
      class="absolute left-4 top-1/2 -translate-y-1/2 text-white hover:text-sunrise-orange transition-colors p-2 disabled:opacity-30 disabled:cursor-not-allowed"
      aria-label="Imagen anterior"
    >
      <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    </button>

    <div class="max-w-7xl max-h-[90vh] w-full mx-4 flex items-center justify-center">
      <img
        id="lightbox-image"
        src=""
        alt=""
        class="max-w-full max-h-[90vh] object-contain"
      />
    </div>

    <button
      id="lightbox-next"
      class="absolute right-4 top-1/2 -translate-y-1/2 text-white hover:text-sunrise-orange transition-colors p-2 disabled:opacity-30 disabled:cursor-not-allowed"
      aria-label="Imagen siguiente"
    >
