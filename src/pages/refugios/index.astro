---
// Page: Refugios Listing (/refugios)
// Description: Display all refuge rehabilitation projects

import BaseLayout from '../../layouts/BaseLayout.astro';
import { refugios } from '../../data/refugios';

function getEstadoBadgeColor(estado: string) {
  switch (estado.toLowerCase()) {
    case 'finalizado':
      return 'bg-lime-green';
    case 'en obra':
      return 'bg-sunrise-orange';
    case 'planificado':
      return 'bg-off-white text-forest-green';
    default:
      return 'bg-off-white text-forest-green';
  }
}
---

<BaseLayout
  title="Nuestros Refugios - RefugiosLibresDignos"
  description="Descubre los refugios libres que estamos rehabilitando para crear espacios seguros y dignos."
>
  <!-- Hero Section -->
  <section class="bg-background-dark text-forest-green" style="padding-top: 120px; padding-bottom: 80px;">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 fade-in-up">Nuestros Refugios</h1>
        <p class="text-xl md:text-2xl fade-in-up">
          Proyectos de rehabilitaci√≥n de refugios libres
        </p>
      </div>
    </div>
  </section>

  <!-- Refuges Grid -->
  <section class="py-16 bg-background-light">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          refugios.map((refugio) => (
            <a href={`/refugios/${refugio.id}`} class="block">
              <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 hover:scale-105 cursor-pointer h-full">
                {/* Placeholder Image */}
                <div class="bg-tan/30 h-48 flex items-center justify-center">
                  <span class="text-forest-green/50 text-sm">Imagen pr√≥ximamente</span>
                </div>

                {/* Card Content */}
                <div class="p-6">
                  <div class="flex items-start justify-between mb-3">
                    <h2 class="text-2xl font-semibold text-forest-green">{refugio.nombre}</h2>
                    <span
                      class={`px-3 py-1 rounded-full text-xs font-semibold text-white ${getEstadoBadgeColor(refugio.estado)}`}
                    >
                      {refugio.estado}
                    </span>
                  </div>

                  <p class="text-sm text-lime-green mb-2">üìç {refugio.ubicacion}</p>

                  <div class="flex gap-4 text-xs text-forest-green/70 mb-3">
                    <span>‚õ∞Ô∏è {refugio.altitud}</span>
                    <span>üë• {refugio.capacidad}</span>
                    <span>üìÖ {refugio.fecha}</span>
                  </div>

                  <p class="text-forest-green/80 mb-4 line-clamp-3">{refugio.descripcion}</p>

                  {refugio.destacados && refugio.destacados.length > 0 && (
                    <div class="flex flex-wrap gap-2">
                      {refugio.destacados.slice(0, 3).map((destacado) => (
                        <span class="text-xs bg-tan/30 text-forest-green px-2 py-1 rounded">
                          {destacado}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
              </article>
            </a>
          ))
        }
      </div>

      {/* Empty State (if no refugios) */}
      {
        refugios.length === 0 && (
          <div class="text-center py-16">
            <p class="text-xl text-forest-green/70">
              Pronto tendremos refugios aqu√≠. ¬°Estamos trabajando en ello!
            </p>
          </div>
        )
      }
    </div>
  </section>

  <!-- Info Section -->
  <section class="py-16 bg-tan/30">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-forest-green mb-6">
          Cada Refugio, Una Historia
        </h2>
        <p class="text-lg text-forest-green/90 mb-8">
          Cada refugio que rehabilitamos es "brindado" a un colectivo espec√≠fico. No son
          simplemente espacios vac√≠os, sino hogares temporales para los escursionistas.
        </p>
        <a href="/proyecto" class="btn btn-primary">
          Conoce Nuestro Proyecto
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
