---
// Page: Contacto (/contacto)
// Description: Contact form and social media links

import BaseLayout from '../layouts/BaseLayout.astro';
import InstagramIcon from '../assets/icons/Instagram.svg';
import FacebookIcon from '../assets/icons/Facebook.svg';
import TikTokIcon from '../assets/icons/TikTok.svg';
---

<BaseLayout
  title="Contacto - RefugiosLibresDignos"
  description="Ponte en contacto con RefugiosLibresDignos para colaborar, consultas o más información sobre nuestros refugios."
>
  <!-- Hero Section -->
  <section class="bg-forest-green text-white pb-16 md:pb-24" style="margin-top: -64px; padding-top: 80px;">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">Contacta con Nosotros</h1>
      <p class="text-xl md:text-2xl max-w-3xl mx-auto">
        Estamos aquí para escucharte
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16 bg-background-light">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 max-w-5xl mx-auto">
        <!-- Social Media & Info -->
        <div>
          <h2 class="text-2xl font-bold text-forest-green mb-6">Síguenos</h2>
          <div class="space-y-4 mb-8">
            <a
              href="https://www.instagram.com/refugioslibresdignos"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center space-x-3 text-forest-green hover:text-sunrise-orange transition-colors group"
            >
              <div class="w-10 h-10 bg-forest-green group-hover:bg-lime-green text-white rounded-full flex items-center justify-center transition-colors">
                <InstagramIcon class="w-5 h-5 fill-current" />
              </div>
              <span class="font-semibold">Instagram</span>
            </a>
            <a
              href="https://www.facebook.com/people/Refugios-Libres-Dignos/100087582142068/"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center space-x-3 text-forest-green hover:text-sunrise-orange transition-colors group"
            >
              <div class="w-10 h-10 bg-forest-green group-hover:bg-lime-green text-white rounded-full flex items-center justify-center transition-colors">
                <FacebookIcon class="w-5 h-5 fill-current" />
              </div>
              <span class="font-semibold">Facebook</span>
            </a>
            <a
              href="https://www.tiktok.com/@refugioslibresdignos"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center space-x-3 text-forest-green hover:text-sunrise-orange transition-colors group"
            >
              <div class="w-10 h-10 bg-forest-green group-hover:bg-lime-green text-white rounded-full flex items-center justify-center transition-colors">
                <TikTokIcon class="w-5 h-5 fill-current" />
              </div>
              <span class="font-semibold">TikTok</span>
            </a>
          </div>

          <div class="bg-tan/30 p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-forest-green mb-3">Email</h3>
            <a
              href="mailto:info@refusdignos.org"
              class="text-sunrise-orange hover:underline"
            >
              info@refusdignos.org
            </a>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl font-bold text-forest-green mb-6">Envíanos un mensaje</h2>
          <!-- Success Message (hidden by default) -->
          <div id="success-message" class="hidden bg-lime-green/10 border-2 border-lime-green text-forest-green p-4 rounded-lg mb-6">
            <div class="flex items-start">
              <svg class="w-6 h-6 text-lime-green mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <h3 class="font-bold mb-1">¡Mensaje enviado con éxito!</h3>
                <p class="text-sm">Gracias por contactarnos. Te responderemos lo antes posible.</p>
              </div>
            </div>
          </div>

          <!-- Error Message (hidden by default) -->
          <div id="error-message" class="hidden bg-sunrise-orange/10 border-2 border-sunrise-orange text-forest-green p-4 rounded-lg mb-6">
            <div class="flex items-start">
              <svg class="w-6 h-6 text-sunrise-orange mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <h3 class="font-bold mb-1">Error al enviar el mensaje</h3>
                <p class="text-sm" id="error-text">Hubo un problema. Por favor, inténtalo de nuevo o contáctanos por email.</p>
              </div>
            </div>
          </div>

          <form id="contact-form" class="space-y-4" method="POST" action="https://formspree.io/f/YOUR_FORM_ID">
            <!-- Name Field -->
            <div>
              <label for="nombre" class="block text-sm font-semibold text-forest-green mb-2">
                Nombre <span class="text-sunrise-orange">*</span>
              </label>
              <input
                type="text"
                id="nombre"
                name="nombre"
                required
                class="w-full px-4 py-2 border border-off-white rounded focus:outline-none focus:ring-2 focus:ring-sunrise-orange"
                placeholder="Tu nombre"
              />
            </div>

            <!-- Email Field -->
            <div>
              <label for="email" class="block text-sm font-semibold text-forest-green mb-2">
                Email <span class="text-sunrise-orange">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-2 border border-off-white rounded focus:outline-none focus:ring-2 focus:ring-sunrise-orange"
                placeholder="tu@email.com"
              />
            </div>

            <!-- Message Field -->
            <div>
              <label for="mensaje" class="block text-sm font-semibold text-forest-green mb-2">
                Mensaje <span class="text-sunrise-orange">*</span>
              </label>
              <textarea
                id="mensaje"
                name="mensaje"
                required
                rows="6"
                class="w-full px-4 py-2 border border-off-white rounded focus:outline-none focus:ring-2 focus:ring-sunrise-orange resize-none"
                placeholder="Escribe tu mensaje aquí..."
              ></textarea>
            </div>

            <!-- Honeypot Field (hidden) -->
            <input type="text" name="_gotcha" style="display:none" tabindex="-1" autocomplete="off" />

            <!-- Submit Button -->
            <button type="submit" id="submit-btn" class="btn btn-primary w-full">
              <span id="btn-text">Enviar Mensaje</span>
              <span id="btn-loading" class="hidden">Enviando...</span>
            </button>
          </form>

          <p class="text-sm text-forest-green/70 mt-4">
            * Campos requeridos. Nos pondremos en contacto contigo lo antes posible.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Info Section -->
  <section class="py-16 bg-tan/30">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-2xl font-bold text-forest-green mb-6">
          ¿Tienes preguntas sobre los refugios?
        </h2>
        <p class="text-lg text-forest-green/90 mb-6">
          Visita nuestra página de refugios para conocer cada proyecto en detalle, o consulta
          nuestra sección sobre el proyecto para entender mejor nuestra misión.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/refugios" class="btn btn-secondary">
            Ver Refugios
          </a>
          <a href="/proyecto" class="btn btn-secondary">
            Nuestro Proyecto
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  // Contact form submission with Formspree
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const btnText = document.getElementById('btn-text') as HTMLSpanElement;
  const btnLoading = document.getElementById('btn-loading') as HTMLSpanElement;
  const successMessage = document.getElementById('success-message');
  const errorMessage = document.getElementById('error-message');
  const errorText = document.getElementById('error-text');

  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Get form data
      const formData = new FormData(form);
      const nombre = formData.get('nombre');
      const email = formData.get('email');
      const mensaje = formData.get('mensaje');

      // Hide previous messages
      successMessage?.classList.add('hidden');
      errorMessage?.classList.add('hidden');

      // Basic validation
      if (!nombre || !email || !mensaje) {
        showError('Por favor, completa todos los campos requeridos.');
        return;
      }

      // Email validation
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(email as string)) {
        showError('Por favor, introduce un email válido.');
        return;
      }

      // Show loading state
      submitBtn.disabled = true;
      btnText.classList.add('hidden');
      btnLoading?.classList.remove('hidden');

      try {
        // Submit to Formspree
        const response = await fetch(form.action, {
          method: 'POST',
          body: formData,
          headers: {
            'Accept': 'application/json'
          }
        });

        if (response.ok) {
          // Success
          successMessage?.classList.remove('hidden');
          form.reset();
          // Scroll to success message
          successMessage?.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        } else {
          // Error from Formspree
          const data = await response.json();
          showError(data.error || 'Hubo un problema al enviar el mensaje.');
        }
      } catch (error) {
        // Network error
        showError('Error de conexión. Por favor, verifica tu conexión a internet.');
      } finally {
        // Reset button state
        submitBtn.disabled = false;
        btnText.classList.remove('hidden');
        btnLoading?.classList.add('hidden');
      }
    });
  }

  function showError(message: string) {
    if (errorText) errorText.textContent = message;
    errorMessage?.classList.remove('hidden');
    errorMessage?.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
  }
</script>
